{
  "name": "appifier",
  "version": "2.3.0",
  "description": "Node.js library/CLI which turns any web site into a native app.",
  "main": "lib/index.js",
  "repository": "https://github.com/webcatalog/appifier.git",
  "author": "Quang Lam <me@quang.im>",
  "scripts": {
    "install": "cd app && yarn",
    "dev": "babel-node src",
    "start": "node lib",
    "build": "npm run build:main && npm run build:app",
    "build:main": "babel src --out-dir lib",
    "build:app": "cd app && npm run build",
    "prepublishOnly": "npm run build",
    "test": "cross-env NODE_ENV=test mocha ./tests",
    "electron-dev": "cd app && yarn electron-dev"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.6.1",
    "chai-as-promised": "7.1.1",
    "chai": "4.1.2",
    "cross-env": "5.1.3",
    "eslint-config-airbnb": "15.1.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.3.0",
    "eslint": "4.12.1",
    "mocha": "4.0.1",
    "spectron": "3.7.2"
  },
  "dependencies": {
    "electron-packager": "10.1.0",
    "file-type": "7.4.0",
    "fs-extra": "5.0.0",
    "icon-gen": "1.2.0",
    "jimp": "0.2.28",
    "read-chunk": "2.1.0",
    "tmp": "0.0.33"
  }
}
