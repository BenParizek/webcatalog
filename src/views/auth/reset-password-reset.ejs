<% include ../partials/head %>

<div class="auth">
  <div class="auth-inner">
    <article class="media">
      <div class="media-content">
        <div class="content has-text-centered">
          <a class="logo" href="/">
            <img src="/public/images/logo.png" alt="WebCatalog" />
          </a>

          <hr>

          <p class="content">
            Please enter your new password.
          </p>

          <% if (locals.emailError) { %>
          <div class="notification is-danger">
            <%= emailError %>
          </div>
          <% } %>

          <form method="post">
            <p class="control">
              <input class="input" type="password" pattern=".{6,}" title="Password must have at least 6 characters" required placeholder="Password" name="password">
            </p>

            <p>
              <button class="button" type="submit">
                Reset Password
              </button>
            </p>
          </form>

        </div>
      </div>
    </article>
  </div>
</div>

<% include ../partials/foot %>
