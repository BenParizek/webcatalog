<% include ../partials/header %>

<section class="hero is-info">
  <div class="hero-body download-mac">
    <div class="container">
      <h1 class="title">Get WebCatalog for <% if (platform === "mac") { %>Mac<% } else if (platform === "linux") { %>Linux<% } else { %>Windows<% } %>
      </h1>
      <p class="subtitle" style="margin-top: -1em">
        Explore thousands of exclusive apps,<br>get desktop notifications, and launch right from your <%= dockName %>.
      </p>

      <% if (platform === "mac") { %>
      <a class="button is-medium is-black download-button" href="https://github.com/webcatalog/webcatalog/releases/download/v<%= version %>/WebCatalog-<%= version %>.dmg" target="_blank" rel="noopener noreferrer">
        <i class="fa fa-apple"></i>
        <span>&nbsp;Download for macOS</span>
      </a>
      <% } else if (platform === "linux") { %>
      <a class="button is-medium is-black download-button" href="https://github.com/webcatalog/webcatalog/releases/download/v<%= version %>/WebCatalog_<%= version %>_amd64.deb" target="_blank" rel="noopener noreferrer">
        <i class="fa fa-linux"></i>
        <span>&nbsp;Download 64 bit .deb (For Ubuntu)</span>
      </a><br/>
      <a class="button is-medium is-black download-button" href="https://github.com/webcatalog/webcatalog/releases/download/v<%= version %>/WebCatalog_<%= version %>_amd64.deb" target="_blank" rel="noopener noreferrer">
        <i class="fa fa-linux"></i>
        <span>&nbsp;Download 64 bit .rpm (For Fedora)</span>
      </a>
      <% } else { %>
      <a class="button is-medium is-black download-button" href="https://github.com/webcatalog/webcatalog/releases/download/v<%= version %>/WebCatalog-Setup-<%= version %>.exe" target="_blank" rel="noopener noreferrer">
        <i class="fa fa-windows"></i>
        <span>&nbsp;Download for Windows</span>
      </a>
      <% } %>

      <p>
        <span>
          <% if (platform === "mac") { %>
            macOS 10.9+.
          <% } else if (platform === "linux") { %>
          <% } else { %>
            Windows 7+.
          <% } %>
        </span>
        <span> Version <%= version %> - <a>What's new</a>.</span>
      </p>

      <p class="subtitle other-platforms">
        <% if (platform === "mac") { %>
          Looking for the <a href="/downloads/windows">Windows</a> or <a href="/downloads/linux">Linux</a> desktop apps?
        <% } else if (platform === "linux") { %>
          Looking for the <a href="/downloads/windows">Windows</a> or <a href="/downloads/mac">Mac</a> desktop apps?
        <% } else { %>
          Looking for the <a href="/downloads/mac">Mac</a> or <a href="/downloads/linux">Linux</a> desktop apps?
        <% } %>
      </p>
    </div>
  </div>
</section>

<section class="section hero is-dark featured-apps">
  <div class="container">
    <div class="content has-text-centered">
      <h2 class="title">The Apps You Love, On Your Mac & PC</h2>
      <div>
        <% topApps.forEach(function (app) { %>
        <a href="/apps/<%= app.slug %>/id<%= app.id %>">
          <picture class="app-icon">
            <source srcset="/s3/<%= app.id %>@128px.webp" type="image/webp">
            <source srcset="/s3/<%= app.id %>@128px.png" type="image/jpeg">
            <img src="/s3/<%= app.id %>@128px.png" alt="<%= app.name %> on the WebCatalog Store">
          </picture>
        </a>
        <% }) %>
      </div>
      <a href="/apps" class="button see-more">See more</a>
    </div>
  </div>
</section>

<section class="section hero features">
  <div class="container">
    <div class="content has-text-centered">
      <h2 class="title">Why WebCatalog?</h1>

      <div class="columns is-multiline is-desktop">
        <div class="column is-half-desktop">
          <div class="message">
            <div class="message-body has-text-centered">
              <span class="icon is-large">
                <i class="fa fa-bell"></i>
              </span>
              <p class="title is-4">Notifications</p>
              <p class="subtitle is-6">
                Stay up-to-date with desktop notifications.
              </p>
            </div>
          </div>
        </div>
        <div class="column is-half-desktop">
          <div class="message">
            <div class="message-body has-text-centered">
              <span class="icon is-large">
                <i class="fa fa-line-chart"></i>
              </span>
              <p class="title is-4">Productivity</p>
              <p class="subtitle is-6">
                Launch from your <%= dockName %>. <% if (platform === "windows") { %>Alt+Tab. Snap Assist<% } else { %>Freely configure the windows<% } %>.
              </p>
            </div>
          </div>
        </div>
        <div class="column is-half-desktop">
          <div class="message">
            <div class="message-body has-text-centered">
              <span class="icon is-large">
                <i class="fa fa-user-secret"></i>
              </span>
              <p class="title is-4">Privacy</p>
              <p class="subtitle is-6">
                Each app runs within an isolated container.
              </p>
            </div>
          </div>
        </div>
        <div class="column is-half-desktop">
          <div class="message">
            <div class="message-body has-text-centered">
              <span class="icon is-large">
                <i class="fa fa-ban"></i>
              </span>
              <p class="title is-4">Ad-Free</p>
              <p class="subtitle is-6">
                Ads + tracker blocker is preinstalled.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


